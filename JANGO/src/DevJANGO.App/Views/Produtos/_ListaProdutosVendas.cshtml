@using DevJANGO.App.Extensions
@model IEnumerable<DevJANGO.App.ViewModels.ProdutoViewModel>


<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Preço
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeEstoque)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @this.FormatoMoeda(item.ValorVenda)
               @*      @item.ValorVenda.ToString("C") *@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantidadeEstoque)
                </td>

                <td class="text-end">
                    <a class="btn btn-primary" asp-controller="PedidoItems" asp-action="Carrinho" asp-route-id="@item.Id">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
