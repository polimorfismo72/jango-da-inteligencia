@using DevJANGO.App.Extensions
@model DevJANGO.App.ViewModels.AlunoInscritoViewModel

@{
    ViewData["Title"] = "Detalhe do(a) Candidato(a) - " + Model.Nome + " - JI  " + Model.Codigo;
}

<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div>
        <hr />  
      <div class="row">
            <div class="col-md-4">
                <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 320; padding-top: 1px;" />
            </div>
            <div class="col-md-4">
                <dl>
                    <dt class="col-sm-10">
                        @Html.DisplayName("Género")
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.Sexo == true)
                        {
                            <span>Mascolino</span>
                        }
                        else
                        {
                            <span>Femenino</span>

                        }
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.Datanascimento)
                    </dt>
                    <dd class="col-sm-10">
               
                        @this.FormataData(Model.Datanascimento)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayName("Número do BI/Cédula")
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NumDocumento)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.NomeDoPai)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NomeDoPai)
                    </dd>
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.NomeDaMae)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NomeDaMae)
                    </dd>
                  
                </dl> 
            </div>

            <div class="col-md-4">
            <dl>
                <dt class="col-sm-10">
                    @Html.DisplayName("Nível de Ensino")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NiveisDeEnsino.NomeNiveisDeEnsino)
                </dd>
                 <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Classe)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Classe.Nome)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Nome do Encarregado")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Encarregado.Nome)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Contacto do Encarregado")
                </dt>
                <dd class="col-sm-10">
                  
                    @this.FormataTelefone(Model.Encarregado.Telefone)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Parentesco com o Encarregado")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GrauDeParentesco.NomeGrauParentesco)
                </dd>
                <dt class="col-sm-10">
                   @Html.DisplayName("Funcionário"):@Html.DisplayFor(model => model.FuncionarioCaixa.Email)
                </dt>
            </dl>
            </div>
      </div>
   
        <div class="row" style="padding-top: 5px">
            <hr />
            <dl>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Endereco)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </div>
    </div>
</div>
<br />
