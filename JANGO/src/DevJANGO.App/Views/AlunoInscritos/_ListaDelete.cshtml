@using DevJANGO.App.Extensions
@model DevJANGO.App.ViewModels.AlunoInscritoViewModel


    <div class="row">
        <div class="col-md-4">
            <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width: 300px; height: 320px" />
        </div>
        <div class="col-md-4">
            <dl>
                <dt class="col-sm-10">
                    @Html.DisplayName("Género")
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Sexo == true)
                    {
                        <span>Mascolino</span>
                    }
                    else
                    {
                        <span>Femenino</span>

                    }
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Datanascimento)
                </dt>
                <dd class="col-sm-10">
                   @*  @Model.Datanascimento.("dd/MM/yyyy") *@
                @this.FormataData(Model.Datanascimento)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Número da Cédula")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumDocumento)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.NomeDoPai)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeDoPai)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.NomeDaMae)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeDaMae)
                </dd>

            </dl>
        </div>

        <div class="col-md-4">
            <dl>

                <dt class="col-sm-10">
                    @Html.DisplayName("Nível de Ensino")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NiveisDeEnsino.NomeNiveisDeEnsino)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Classe)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Classe.Nome)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Nome do Encarregado")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Encarregado.Nome)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Contacto do Encarregado")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Encarregado.Telefone)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayName("Parentesco com o Encarregado")
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.GrauDeParentesco.NomeGrauParentesco)
                </dd>

            </dl>
        </div>

    </div>






