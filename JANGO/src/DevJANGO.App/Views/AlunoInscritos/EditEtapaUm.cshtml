@model DevJANGO.App.ViewModels.AlunoInscritoViewModel

@{
    ViewData["Title"] = "Editar Aluno ";
}

<div class="container">
    <h3>@ViewData["Title"] @Model.Nome</h3>
    <hr />
    <div class="row">
        <form enctype="multipart/form-data" asp-action="EditEtapaUm">
            <vc:Summary></vc:Summary>
            
            <partial name="_EditEnsinoPrimario" />
       
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
               
                <a class="btn btn-info" asp-action="IndexEtapaUm">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });
    </script>
}
