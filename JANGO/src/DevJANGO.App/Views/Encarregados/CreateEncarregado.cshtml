@model DevJANGO.App.ViewModels.EncarregadoViewModel

@{
    ViewData["Title"] = "Formulário Liberado";
    Layout = "/Areas/Encarregado/Views/Shared/_LayoutEncarregado.cshtml";
}

<br />
<div class="container">
    <h1>@ViewData["Title"] Para Encarregado de Educação</h1>
    <hr />
    <div class="row">

        <form enctype="multipart/form-data" asp-action="CreateEncarregado">
            <vc:Summary></vc:Summary>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" id="nome_contacto"  />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proficao" class="control-label"></label>
                <input asp-for="Proficao" class="form-control" />
                <span asp-validation-for="Proficao" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:5px;">
                <input type="submit" value="Adicionar" class="btn btn-success" />
                <a class="btn btn-info" asp-action="IndexEncarregado">Voltar</a>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            ValorNaoPermitido();
        });
    </script>
}
