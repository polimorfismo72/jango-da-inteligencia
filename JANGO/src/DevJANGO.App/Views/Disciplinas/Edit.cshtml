@model DevJANGO.App.ViewModels.DisciplinaViewModel

@{
    ViewData["Title"] = "Editar  Discilina";
}
<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <form asp-action="Edit">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="NiveisDeEnsinoId" class="form-control" />
            <div class="row">
                <div class="form-group col-md-8">
                    <input asp-for="NomeDisciplina" class="form-control" />
                    <span asp-validation-for="NomeDisciplina" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
