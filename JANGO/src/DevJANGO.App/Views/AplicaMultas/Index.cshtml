@using DevJANGO.App.Extensions
@model IEnumerable<DevJANGO.App.ViewModels.AplicaMultaViewModel>

@{
    ViewData["Title"] = "Lista de multas";
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>

    <vc:Summary></vc:Summary>
    <p>
        <a class="btn btn-info" asp-action="Create">Nova Aplicação</a>
    </p>
    <table class="table table-hover">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayName("Descrição da Aplicação")
            </th>
            <th>
                @Html.DisplayName("Data de Aplicação")
            </th>
             <th>
                @Html.DisplayName("Usuário")
            </th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model) {
          <tr>
              <td>
                  @Html.DisplayFor(modelItem => item.Nome)
              </td>
              <td>
                  @this.FormataData(item.DataCadastro)
              </td>
             <td>
                  @Html.DisplayFor(modelItem => item.Usuario)
             </td>
          </tr>
      }
    </tbody>
    </table>
</div>
<br />
