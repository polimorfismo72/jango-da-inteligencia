@model DevJANGO.App.ViewModels.ClasseViewModel

@{
    ViewData["Title"] = "Editar Classe";
}
<br />
<br />
<div class="container">
    <form enctype="multipart/form-data" asp-action="Edit">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="NiveisDeEnsinoId" class="form-control" />
        <input type="hidden" asp-for="CursoId" class="form-control" />
      
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PrecoPropina" class="control-label"></label>
                <input asp-for="PrecoPropina" class="form-control" />
                <span asp-validation-for="PrecoPropina" class="text-danger"></span>
            </div>


            <div class="form-group col-md-2">
                <div class="form-group form-check">
                    <br />
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="ClassDeExame" /> @Html.DisplayNameFor(model => model.ClassDeExame)
                    </label>
                </div>
                <br />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
        </div>
        </form>

</div>
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
