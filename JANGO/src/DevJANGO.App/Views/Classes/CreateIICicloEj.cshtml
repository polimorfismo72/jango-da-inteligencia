@model DevJANGO.App.ViewModels.ClasseViewModel

@{
    ViewData["Title"] = "Nova Classe Para Ecominomicase E Juridicas";
}

<br />
<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <form enctype="multipart/form-data" asp-action="CreateIICicloEj">
            <vc:Summary></vc:Summary>
            <input type="hidden" asp-for="CursoId" class="form-control" />
            <div class="row">
                <div class="form-group col-md-2">
                    <label  class="control-label">Nome da Classe</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="PrecoPropina" class="control-label"></label>
                    <input asp-for="PrecoPropina" class="form-control" />
                    <span asp-validation-for="PrecoPropina" class="text-danger"></span>
                </div>

                <div class="form-group col-md-2">
                    <label class="control-label">Nivel de Ensino</label>
                    <input value="II Ciclo" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label">Curso</label>
                    <input value="Economicas e Juridicas" class="form-control" readonly="readonly" />
                </div>
                
                <div class="form-group col-md-2">
                <div class="form-group form-check">
                        <br />
                    <label class="form-check-label">
                            <input class="form-check-input" asp-for="ClassDeExame" /> @Html.DisplayNameFor(model => model.ClassDeExame)
                    </label>
                </div>
                    <br />
                </div>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
