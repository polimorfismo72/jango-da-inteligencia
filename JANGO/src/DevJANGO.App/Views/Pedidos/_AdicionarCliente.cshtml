@model DevJANGO.App.ViewModels.PedidoViewModel;


@* <vc:Summary></vc:Summary> *@
<form asp-action="ClinteAdicionar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body">
     
        <div class="row">
          <br />
            <div class="form-group col-md-4">
                <label asp-for="AlunoMatriculado.Nome" class="control-label"></label>
                <input asp-for="AlunoMatriculado.Nome" class="form-control" />
                <span asp-validation-for="AlunoMatriculado.Nome" class="text-danger"></span>

                <label asp-for="AlunoMatriculado.NumDocumento" class="control-label"></label>
                <input asp-for="AlunoMatriculado.NumDocumento" class="form-control" />
                <span asp-validation-for="AlunoMatriculado.NumDocumento" class="text-danger"></span>
            </div>

        </div>

        <div class="modal-footer">
            <input type="submit" value="Salvar" class="btn btn-success" />
            <input type="button" class="btn btn-info" value="Fechar" data-bs-dismiss="modal" />
        </div>

    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
